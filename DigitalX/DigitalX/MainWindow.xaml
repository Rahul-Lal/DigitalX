<Page x:Class="DigitalX.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DigitalX"
      mc:Ignorable="d" 
      Title="DigitalX | Main Page" Height="350" Width="525">

    <Grid Background="#FF96C1FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label x:Name="lblTitle" Content="DigitalX" Grid.ColumnSpan="2" FontSize="42.5" FontWeight="Bold" HorizontalAlignment="Center" />

        <Button x:Name="btnOrders" Content="Orders" Grid.Row="1" HorizontalAlignment="Right" Width="125" Margin="0,0,25,0" Click="btnOrders_Click"/>
    </Grid>
</Page>
